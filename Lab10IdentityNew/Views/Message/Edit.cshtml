@model Lab10IdentityNew.Models.Message

@{
    ViewBag.Titlu = "Edit your comment";
}

<h2>@ViewBag.Titlu</h2>
<form method="post" action="/Message/Edit/@Model.Id">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Id)
 
    <br /><br />
    @Html.Label("Content", "Your new comment")
    <br />
    @Html.TextAreaFor(m => m.Comment)
    @Html.ValidationMessageFor(model => model.Comment, "Comment is mandatory", new { @class = "text-danger " })
    <br /><br />
    @Html.HiddenFor(m => m.Date)
    <button class="btn btn-sm btn-success" type="submit">Submit</button>
</form>

