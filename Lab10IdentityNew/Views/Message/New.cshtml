@model Lab10IdentityNew.Models.Message

@{
    ViewBag.Title = "Add a comment";
}

<h2>@ViewBag.Title</h2>

<form method="post" action="/Message/New">
    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.ArticleId)

    @Html.Label("Comment", "Your comment:")
    <br />
    @Html.TextArea("Comment", null, new { @class = "form-control" })
    <br /><br />
    @Html.Hidden("Date", DateTime.Now, new { @class = "form-control" })
    <button class="btn btn-sm btn-success" type="submit">Submit</button>
</form>
