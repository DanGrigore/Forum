@model CursLab8.Models.Category
@{
    ViewBag.Title = "Edit this category";
}

<h2>@ViewBag.Title</h2>
<form method="post" action="/Categories/Edit/@Model.CategoryId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <br />
    @Html.Label("CategoryName", "New name")
    <br />
    @Html.EditorFor(m => m.CategoryName)
    @Html.ValidationMessageFor(model => model.CategoryName, null, new { @class = "text-danger " })
    <br /><br />
    <button class="btn btn-sm btn-success" type="submit">Submit</button>
</form>

