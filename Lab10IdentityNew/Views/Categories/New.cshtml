@model CursLab8.Models.Category
@{
    ViewBag.Title = "Add new category";
}

<h2>@ViewBag.Title</h2>

<form method="post" action="/Categories/New">
    @Html.Label("CategoryName", "Category's name:")
    <br />
    @Html.TextBox("CategoryName", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.CategoryName, null, new { @class = "text-danger " })
    <br /><br />
    <button class="btn btn-sm btn-success" type="submit">Submit</button>
</form>

