
@{
    ViewBag.Titlu = "Category Panel";
}

<h2>@ViewBag.Titlu</h2>
<a class="btn btn-sm btn-primary" href="/Categories/New">New Category</a>
<br /><br />


@if (TempData.ContainsKey("message"))
{
    <h3 class="alert alert-info" role="alert">@ViewBag.message</h3>
}

@foreach (var category in ViewBag.Categories)
{
    <p>@category.CategoryName</p>
    <a class="btn btn-sm btn-success" href="/Categories/Show/@category.CategoryId">Manage this category</a>
    <br />
    <hr/>

}


