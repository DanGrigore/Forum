@model CursLab8.Models.Article
@{
    ViewBag.Titlu = "New Topic";
}

<h2>@ViewBag.Titlu</h2>
<form method="post" action="/Article/New">
    @Html.HiddenFor(m => m.UserId)

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.Label("Title", "Title")
    <br />
    @Html.TextBox("Title", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Title, "Title is mandatory", new { @class = "text-danger " })
    <br /><br />
    @Html.Label("Content", "Topic's content:")
    <br />
    @Html.TextArea("Content", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Content, "Content is mandatory", new { @class = "text-danger " })
    <br /><br />
    @Html.Hidden("Date", DateTime.Now, new { @class = "form-control" })
    <label>Selectati categoria</label>
    @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories, "Value", "Text"), "Category", new { @class = "form-control" })
    <br />
    <button class="btn btn-sm btn-success" type="submit">Submit</button>
</form>
